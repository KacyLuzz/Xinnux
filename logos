--loading values
runn = {}
--convertion
MB = 1024
B = 8
--functions

function rightClick(xP, yP)
	term.setBackgroundColor(colors.lightGray)
	term.setCursorPos(xP, yP)
	term.write("Access Shell")
	event, button, xPos, yPos = oldOsPullEvent("mouse_click")
	if button == 1 then
		if xPos >= xP and xPos <= xP+11 and yPos == yP then
			x, y = term.getSize()
			local nWindow3 = window.create(term.current(), 1,2,x,y-1, true)
			term.redirect(nWindow3)
			
			shell.run("shell")
			term.redirect(term.native())
			nWindow3.setVisible(false)
			completeDraw()
		end
	else
		completeDraw()
	end
end

os.loadAPI("Xinnux/strutils")
os.loadAPI("Xinnux/SHA256util")
--os.loadAPI("cAPI")
term.clear()
term.setBackgroundColor(colors.lightBlue)
term.setTextColor(1)
term.setCursorPos(1,1)
term.clear()
settingsH = fs.open("Xinnux/cfg.ini", "r")
user1 = settingsH.readLine()
pass1 = settingsH.readLine()
passOnLogon = settingsH.readLine()
tacoI = settingsH.readLine()
settingsH.close()
term.setCursorPos(1,1)
print(os.version())
if passOnLogon == "yes" then
	os.pullEvent = os.pullEventRaw
	term.setCursorPos(2,5)
	print("Username:")
	term.setCursorPos(2,7)
	print("Password:")
	term.setCursorPos(2,6)
	term.setBackgroundColor(colors.blue)
	write("                    ")
	term.setCursorPos(2,8)
	write("                    ")
	term.setCursorPos(2,6)
	local user = read()
	term.setCursorPos(2,8)
	local pass = read("*")
	pass = SHA256util.sha256(pass)

	
	
	if user1 == user then
		if pass1 ~= pass then
			BSOD("Password Mismatch")
		else
			--wait

		end
	else
		BSOD("Username Mismatch")
	end
else
	--wait... it's down there
end
shell.run("logos/kernel")
local function fb() 
	shell.run('Xinnux/Programs/File Browser.prog')
end

local function main()
	completeDraw()
	printed = false
	term.setCursorBlink(false)
	while true do

		local event, button, xP, yP = oldOsPullEvent("mouse_click")
		
		if button == 1 then
			if printed == false then
				if xP >= 2 and xP <= 7 and yP == 1 then

					term.setCursorPos(1,2)
					term.setBackgroundColor(colors.lightGray)
					print("File Browser    ")
					print("Shutdown    ")
					print("Restart     ")
					print("------------")
					print("About       ")
					printed = true
				end
			else
			
				if xP <= 12 and xP >= 1 then
					if yP == 2 then
						fb()
						printed = false
						completeDraw()
					elseif yP ==3 then
						
						
						term.setBackgroundColor(colors.gray)
						term.setTextColor(colors.yellow)
						term.clear()
						term.setCursorPos(1,3)
						print("Unloading APIs...")
						sleep(0.5)
						print("Shutting down..")
						print(" ")
						print("Thanks for using Xinnux by Kacy")
						sleep(2)
						os.shutdown()
					elseif yP == 4 then
						
						
						term.setBackgroundColor(colors.gray)
						term.setTextColor(colors.yellow)
						term.clear()
						term.setCursorPos(1,3)
						print("Unloading APIs...")
						sleep(0.5)
						print("Rebooting..")
						print("")
						print("Thanks for using Xinnux by Kacy")
						sleep(2)
						os.reboot()
					elseif yP == 6 then
						term.clear()
						term.setBackgroundColor(colors.gray)
						term.setTextColor(colors.white)
						term.clear()
						term.setCursorPos(1,1)
						print(os.version())
						print("")
						print("Disk Space:")
						print("  Free Space: " .. string.sub(fs.getFreeSpace("/")/1024/1024,1,5) .. "MB    Total Space: 1 MB")
						print("")
						print("Press any key to continue...")
						os.pullEvent("char" or "mouse_click")
						printed = false
						completeDraw()
					else
						printed = false
						completeDraw()
					end

				end
				printed = false
				completeDraw()
			end
		else
			rightClick(xP,yP)
		end
	end
end
--ok, it's here

local ok, err = pcall(main)
if not ok then
	BSOD(err)
end

while true do
	drawBar()
end